
<!-- All Articles Page -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Article</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        padding-top: 20px;
      }

      h1 {
        margin-bottom: 30px;
        font-size: 36px;
        color: #343a40;
        font-weight: 700;
        text-align: center;
      }

      .table {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      th,
      td {
        text-align: center;
        vertical-align: middle;
      }

      th {
        background-color: #2b1939;
        color: #fff;
        font-weight: 600;
      }

      .btn-create {
        padding: 10px 20px;
        background-color: #2b1939;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: 600;
        display: inline-block;
        margin-bottom: 15px;
      }

      .btn-create:hover {
        background-color: #2b1939;
        color: #fff;
      }

      .actions a,
      .actions button {
        margin: 0 5px;
      }

      .actions .btn-edit {
        padding: 5px 10px;
        background-color: #431f3c;
        color: #fff;
        border-radius: 4px;
        text-decoration: none;
      }

      .actions .btn-edit:hover {
        background-color: #431f3c;
      }

      .actions .btn-delete {
        padding: 5px 10px;
        background-color: #431f3c;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      .actions .btn-delete:hover {
        background-color: #431f3c;
      }

      table {
        width: 100%;
        margin-top: 20px;
      }

      .table td,
      .table th {
        padding: 15px;
      }

      .table-hover tbody tr:hover {
        background-color: #f1f1f1;
      }
    </style>
  </head>
  <body>
   
      <%- include("navbar") %>
      <div class="container">
        <br />
        <h1>All Articles</h1>
        <% if (user && user.role === 'admin') { %>
        <div class="text-right">
          <a href="/artical/create" class="btn-create">Create Article</a>
        </div>
        <% } %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Author Name</th>
              <th>Description</th>
              <% if (user && user.role === 'admin') { %>
              <th>Comments</th>
              <th>Actions</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% articles.forEach(article => { %>
            <tr>
              <td><%= article.authorName %></td>
              <td><%= article.description %></td>
              <% if (user && user.role === 'admin') { %>
              <td>
                <a href="/artical/<%= article._id %>/comments">Show Comments</a>
              </td>
              <td class="actions">
                <a href="/artical/<%= article._id %>/edit" class="btn-edit"
                  >Edit</a
                >
                <form
                  action="/artical/<%= article._id %>/delete"
                  method="POST"
                  style="display: inline"
                >
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </td>
              <% } %>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
  
      <!-- Bootstrap JS and dependencies -->
      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
 
   </body>
</html>
